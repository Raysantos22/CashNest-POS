<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8dp">

    <!-- Compact Header -->

    <!-- Compact Payment Method and Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_background_mobile"
        android:elevation="1dp"
        android:padding="12dp">

        <Spinner
            android:id="@+id/paymentMethodSpinner"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1.2"
            android:background="@drawable/card_background_mobilepaynow1"
            android:layout_marginEnd="6dp"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/amountPaidEditText"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textColor="#1e293b"
            android:textColorHint="#94a3b8"
            android:backgroundTint="#cbd5e1"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:maxLength="10"/>
    </LinearLayout>

    <!-- Compact Customer Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/card_background_mobile"
        android:elevation="1dp"
        android:padding="12dp">

        <AutoCompleteTextView
            android:id="@+id/customerAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Customer Name"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#1e293b"
            android:textColorHint="#94a3b8"
            android:backgroundTint="#cbd5e1"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Compact Percentage Payment Buttons -->
    <HorizontalScrollView
        android:id="@+id/smartPartialPayScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/card_background_mobile"
        android:elevation="2dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#3b82f6">

                <Button
                    android:id="@+id/btn80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="80%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#10b981">

                <Button
                    android:id="@+id/btn70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="70%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#0ea5e9">

                <Button
                    android:id="@+id/btn60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="60%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#f59e0b">

                <Button
                    android:id="@+id/btn50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="50%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#8b5cf6">

                <Button
                    android:id="@+id/btn40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="40%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#ef4444">

                <Button
                    android:id="@+id/btn30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:minHeight="36dp"
                    android:text="30%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:background="?android:attr/selectableItemBackground"
                    style="?android:attr/buttonBarButtonStyle"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>