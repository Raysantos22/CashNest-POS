<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/totalAmountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: P0.00"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingStart="8dp"/>

        <Switch
            android:id="@+id/splitPaymentSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Split Payment"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/paymentMethodSpinner1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Payment Method"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/amountPaidEditText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:backgroundTint="#CCCCCC"
            android:padding="8dp"
            android:gravity="center"
            android:maxLength="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondPaymentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Spinner
            android:id="@+id/paymentMethodSpinner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Payment Method"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/amountPaidEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:backgroundTint="#CCCCCC"
            android:padding="8dp"
            android:gravity="center"
            android:maxLength="10"/>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/customerAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Name"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:backgroundTint="#CCCCCC"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="8dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/button7"
            style="@style/NumpadButton"
            android:text="7"/>

        <Button
            android:id="@+id/button8"
            style="@style/NumpadButton"
            android:text="8"/>

        <Button
            android:id="@+id/button9"
            style="@style/NumpadButton"
            android:text="9"/>

        <Button
            android:id="@+id/button4"
            style="@style/NumpadButton"
            android:text="4"/>

        <Button
            android:id="@+id/button5"
            style="@style/NumpadButton"
            android:text="5"/>

        <Button
            android:id="@+id/button6"
            style="@style/NumpadButton"
            android:text="6"/>

        <Button
            android:id="@+id/button1"
            style="@style/NumpadButton"
            android:text="1"/>

        <Button
            android:id="@+id/button2"
            style="@style/NumpadButton"
            android:text="2"/>

        <Button
            android:id="@+id/button3"
            style="@style/NumpadButton"
            android:text="3"/>

        <Button
            android:id="@+id/buttonDot"
            style="@style/NumpadButton"
            android:text="."/>

        <Button
            android:id="@+id/button0"
            style="@style/NumpadButton"
            android:text="0"/>

        <Button
            android:id="@+id/buttonBackspace"
            style="@style/NumpadButton"
            android:text="âŒ«"/>
    </GridLayout>
</LinearLayout>

