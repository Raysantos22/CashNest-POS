<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:backgroundTint="@color/black"
            android:paddingBottom="12dp"
            android:hint="Name" />

        <LinearLayout
            android:id="@+id/expenseTypeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddExpenseType"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="+ Add Expense Type"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:backgroundTint="@color/black"
            android:paddingBottom="12dp"
            android:hint="Amount"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/editReceivedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:backgroundTint="@color/black"
            android:paddingBottom="12dp"
            android:hint="Received By"/>

        <EditText
            android:id="@+id/editApprovedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp"
            android:paddingBottom="12dp"
            android:hint="Approved By"/>

        <EditText
            android:id="@+id/editEffectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:backgroundTint="@color/black"
            android:paddingBottom="12dp"
            android:hint="Effect Date"
            android:focusable="false"
            android:clickable="true"/>

    </LinearLayout>
</ScrollView>