<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mobile_margin_small"
    app:cardCornerRadius="@dimen/mobile_card_radius"
    app:cardElevation="@dimen/mobile_card_elevation"
    app:cardBackgroundColor="@android:color/white">

    <TextView
        android:id="@+id/mobileCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="@dimen/mobile_touch_target_size"
        android:gravity="center"
        android:padding="@dimen/mobile_margin_medium"
        android:text="Category"
        android:textColor="@color/navy"
        android:textSize="@dimen/mobile_text_medium"
        android:textStyle="bold"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

</androidx.cardview.widget.CardView>