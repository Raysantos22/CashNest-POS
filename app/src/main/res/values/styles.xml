    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>
    <style name="SidebarButtonSmall">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SidebarBackground">
        <item name="android:background">#0A1E4C</item>
    </style>

    <style name="NumpadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SelectProductButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="SmartPayCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#673AB7</item>
        <item name="rippleColor">#FFFFFF</item>
<!--        <item name="android:outlineSpotShadowColor">#304FFE</item>  &lt;!&ndash; Blue shadow color &ndash;&gt;-->
<!--        <item name="android:outlineAmbientShadowColor">#304FFE</item>  &lt;!&ndash; Blue shadow color &ndash;&gt;-->
    </style>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
    <!-- Mobile Styles -->
    <style name="MobileButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/mobile_button_ripple</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="MobileCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="MobileHeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="MobileBodyTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MobilePriceTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <!-- Mobile Product Card Style -->
    <style name="MobileProductCardStyle" parent="MobileCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Mobile Cart Item Style -->
    <style name="MobileCartItemStyle" parent="MobileCardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Navigation Menu Item Style -->
    <style name="NavigationMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="MobileFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/navy</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
