<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SidebarButtonSmall">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SidebarBackground">
        <item name="android:background">#0A1E4C</item>
    </style>

    <style name="NumpadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
