<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>
    <style name="CustomDialogStyle1" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="CustomDialogStyle3" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>
    <style name="SearchViewDropdown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!-- Delete/remove this style -->
    <style name="CalendarViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekText</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarMonthText</item>
<!--        <item name="android:calendarHeight">350dp</item>-->
    </style>

    <style name="CalendarMonthText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
