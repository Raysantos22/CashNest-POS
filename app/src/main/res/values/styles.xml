    <style name="SidebarButtonSmall">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="SidebarBackground">
        <item name="android:background">#0A1E4C</item>
    </style>

    <style name="NumpadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SelectProductButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="SmartPayCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#673AB7</item>
        <item name="rippleColor">#FFFFFF</item>
<!--        <item name="android:outlineSpotShadowColor">#304FFE</item>  &lt;!&ndash; Blue shadow color &ndash;&gt;-->
<!--        <item name="android:outlineAmbientShadowColor">#304FFE</item>  &lt;!&ndash; Blue shadow color &ndash;&gt;-->
    </style>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

